    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug Rails",
            "script": "s",
            "request": "launch",
            "command": "./bin/rails",
            "cwd": "${workspaceRoot}",
            "askParameters": false,
            "rdbgPath": "./bin/rdbg"
        },
        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "askParameters": true,
            "useTerminal": true
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        },
    ]
}